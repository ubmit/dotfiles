# load zgenom
source "${HOME}/.zgenom/zgenom.zsh"

# Check for plugin and zgenom updates every 7 days
# This does not increase the startup time.
zgenom autoupdate

# if the init script doesn't exist
if ! zgenom saved; then
	echo "Creating a zgenom save"

	# Ohmyzsh base library
	zgenom ohmyzsh

	# plugins
	zgenom ohmyzsh plugins/git
	zgenom load zsh-users/zsh-completions
	zgenom load zsh-users/zsh-autosuggestions
	zgenom load zdharma-continuum/fast-syntax-highlighting
	zgenom load djui/alias-tips

	# save all to init script
	zgenom save
fi

# set env variables
export PNPM_HOME="$HOME/Library/pnpm"
export BUN_INSTALL="$HOME/.bun"
export HOMEBREW_NO_INSTALL_FROM_API=1

# add to path
path+=('/opt/homebrew/bin')
path+=('/opt/homebrew/sbin')
path+=("${HOME}/.local/bin")
path+=($PNPM_HOME)
path+=("$BUN_INSTALL/bin")
export PATH

function bat_theme {
	echo $(defaults read -globalDomain AppleInterfaceStyle &>/dev/null && echo 'Catppuccin Mocha' || echo 'Catppuccin Latte')
}

# aliases
alias dotfiles='git --git-dir=$HOME/.dotfiles/ --work-tree=$HOME'
alias rm=trash
alias ls="eza --color=always --long --git --no-filesize --icons=always --no-time --no-user --no-permissions"
alias vim=nvim
alias pn=pnpm
alias pnx='pnpm dlx'
alias fly=flyctl
alias lg=lazygit
alias cat='bat --theme"$(bat_theme)"'

# load fnm
eval "$(fnm env --use-on-cd)"

# load zoxide
eval "$(zoxide init --cmd cd zsh)"

# load starship
eval "$(starship init zsh)"

# load thefuck
eval "$(thefuck --alias fk)"

# ---- FZF -----
# set up fzf key bindings and fuzzy completion
eval "$(fzf --zsh)"

# theme
function fzf_theme {
	local catppuccin_mocha=" \
--color=bg+:#313244,bg:#1e1e2e,spinner:#f5e0dc,hl:#f38ba8 \
--color=fg:#cdd6f4,header:#f38ba8,info:#cba6f7,pointer:#f5e0dc \
--color=marker:#f5e0dc,fg+:#cdd6f4,prompt:#cba6f7,hl+:#f38ba8"

	local catppuccin_latte=" \
--color=bg+:#ccd0da,bg:#eff1f5,spinner:#dc8a78,hl:#d20f39 \
--color=fg:#4c4f69,header:#d20f39,info:#8839ef,pointer:#dc8a78 \
--color=marker:#dc8a78,fg+:#4c4f69,prompt:#8839ef,hl+:#d20f39"

	local theme
	theme=$(defaults read -globalDomain AppleInterfaceStyle &>/dev/null && echo $catppuccin_mocha || echo $catppuccin_latte)
	echo $theme
}

export FZF_DEFAULT_OPTS=$(fzf_theme)

# use fd instead of fzf
export FZF_DEFAULT_COMMAND="fd --hidden --strip-cwd-prefix --exclude .git"
export FZF_CTRL_T_COMMAND="$FZF_DEFAULT_COMMAND"
export FZF_ALT_C_COMMAND="fd --type=d --hidden --strip-cwd-prefix --exclude .git"

# use fd (https://github.com/sharkdp/fd) for listing path candidates.
# - The first argument to the function ($1) is the base path to start traversal
# - See the source code (completion.{bash,zsh}) for the details.
_fzf_compgen_path() {
	fd --hidden --exclude .git . "$1"
}

# use fd to generate the list for directory completion
_fzf_compgen_dir() {
	fd --type=d --hidden --exclude .git . "$1"
}

export FZF_CTRL_T_OPTS="--preview 'bat -n --color=always --line-range :500 {}'"
export FZF_ALT_C_OPTS="--preview 'eza --tree --color=always {} | head -200'"

# Advanced customization of fzf options via _fzf_comprun function
# - The first argument to the function is the name of the command.
# - You should make sure to pass the rest of the arguments to fzf.
_fzf_comprun() {
	local command=$1
	shift

	case "$command" in
	cd) fzf --preview 'eza --tree --color=always {} | head -200' "$@" ;;
	export | unset) fzf --preview "eval 'echo \$'{}" "$@" ;;
	ssh) fzf --preview 'dig {}' "$@" ;;
	*) fzf --preview "bat -n --color=always --line-range :500 {}" "$@" ;;
	esac
}

# bun completions
[ -s "/Users/guilherme/.bun/_bun" ] && source "/Users/guilherme/.bun/_bun"
